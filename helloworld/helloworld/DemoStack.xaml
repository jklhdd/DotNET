<Page
    x:Class="helloworld.DemoStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:helloworld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.TopAppBar>
        <AppBar>
            <AppBarButton Icon="Calculator" Name="btnStackPanel" Click="btnStackPanel_Click"></AppBarButton>
        </AppBar>
    </Page.TopAppBar>
    <Grid>
        <StackPanel Margin="84,121,0,0" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top">
            <Rectangle Fill="Red" Canvas.Top="100" Canvas.Left="50" Width="200" Height="100"></Rectangle>
            <Ellipse Fill="Blue" Width="300" Height="200" x:Name="elip"/>
            <StackPanel Width="100"/>
            <Polygon Fill="Green" Points="100,100 300,0 300,200" />
        </StackPanel>
    </Grid>
</Page>
